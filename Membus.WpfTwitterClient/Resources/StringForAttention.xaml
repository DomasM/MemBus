<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:cal="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro">
    <DataTemplate x:Key="ConfirmationMessage">
        <StackPanel Orientation="Horizontal">
            <Label Content="{Binding Path=Message}" Style="{StaticResource ResourceKey=AttentionLabel}" />
            <Button cal:Message.Attach="[Event Click] = [Action Stop()]">
                <Image Source="pack://application:,,,/Resources/check.png" />
            </Button>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>